<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">
<div class="width-outer-70">
<SETCOUNTER NAME="DeleteCounter" VALUE="1"/>
<LOOP UNTIL="Counters.DeleteCounter=Variables.numdeletes">
    <SETVAR NAME="shouldDelete" VALUE="Variables.dodeleteCounters.DeleteCounter"/>
    <IF COND="Variables.shouldDelete=true"><THEN>
        <!-- clear out errno -->
        <SETVAR NAME="errno" VALUE="0"/>

        <!-- do the delete -->
        <SETVAR NAME="deleteTable" VALUE="Variables.deletemeTableCounters.DeleteCounter"/>
        <SETVAR NAME="deleteAsset" VALUE="Variables.deletemeAssetCounters.DeleteCounter"/>
        <SETVAR NAME="deleteVersion" VALUE="Variables.deletemeVersionCounters.DeleteCounter"/>
        <DELETEREVISION TABLE="Variables.deleteTable"
                        ASSET="Variables.deleteAsset"
                        VERSION="Variables.deleteVersion"/>
        <!-- See if track succeeded -->
        <IF COND="Variables.errno=0">
             <THEN>
                  <!-- if succeeded, brag about it -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/DeleteRevision" VARNAME="deleteRevision"/>
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.deleteRevision"/>
						<ARGUMENT NAME="severity" VALUE="info"/>
				  </CALLELEMENT>
             </THEN>
             <ELSE>
                  <!-- otherwise, call an error reporting element -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/DeleteRevisionfailed" VARNAME="deleteRevisionFailed"/>
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.deleteRevisionFailed"/>
						<ARGUMENT NAME="severity" VALUE="error"/>
				  </CALLELEMENT>
				  <CALLELEMENT NAME="FutureTense/Apps/AdminForms/RevisionMgt/errors"/>
             </ELSE>
        </IF>
    </THEN></IF>
    <INCCOUNTER NAME="DeleteCounter" VALUE="1"/>
</LOOP>
</div>
</FTCS>
