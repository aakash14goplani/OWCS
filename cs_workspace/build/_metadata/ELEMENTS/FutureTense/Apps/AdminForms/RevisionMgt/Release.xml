<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">
<div class="width-outer-70">
<SETCOUNTER NAME="ReleaseCounter" VALUE="1"/>
<LOOP UNTIL="Counters.ReleaseCounter=Variables.numreleases">
    <SETVAR NAME="shouldRelease" VALUE="Variables.doreleaseCounters.ReleaseCounter"/>
    <IF COND="Variables.shouldRelease=true"><THEN>
        <!-- clear out errno -->
        <SETVAR NAME="errno" VALUE="0"/>

        <!-- do the unlock -->
        <SETVAR NAME="releaseTable" VALUE="Variables.releasemeTableCounters.ReleaseCounter"/>
        <SETVAR NAME="releaseAsset" VALUE="Variables.releasemeAssetCounters.ReleaseCounter"/>
        <!-- do the release -->
        <RELEASE TABLE="Variables.releaseTable"
                 ASSET="Variables.releaseAsset"/>
        <!-- See if track succeeded -->
        <IF COND="Variables.errno=0">
             <THEN>
                  <!-- if succeeded, brag about it -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/ReleasesucceededFor" VARNAME="ReleaseSucceededFor"/> 
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.ReleaseSucceededFor"/>
						<ARGUMENT NAME="severity" VALUE="info"/>
				  </CALLELEMENT>
             </THEN>
             <ELSE>
                  <!-- otherwise, call an error reporting element -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/Releasefailed" VARNAME="ReleaseFailed"/> 
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.ReleaseFailed"/>
						<ARGUMENT NAME="severity" VALUE="error"/>
				  </CALLELEMENT>
                  <CALLELEMENT NAME="FutureTense/Apps/AdminForms/RevisionMgt/errors"/>
             </ELSE>
        </IF>
    </THEN></IF>
    <INCCOUNTER NAME="ReleaseCounter" VALUE="1"/>
</LOOP>
</div>
</FTCS>
