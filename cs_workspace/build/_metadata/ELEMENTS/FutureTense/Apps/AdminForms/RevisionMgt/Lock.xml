<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">
<div class="width-outer-70">
<SETCOUNTER NAME="LockCounter" VALUE="1"/>
<LOOP UNTIL="Counters.LockCounter=Variables.numlocks">
    <SETVAR NAME="shouldLock" VALUE="Variables.dolockCounters.LockCounter"/>
    <IF COND="Variables.shouldLock=true"><THEN>
        <!-- clear out errno -->
        <SETVAR NAME="errno" VALUE="0"/>

        <!-- do the lock -->
        <SETVAR NAME="lockTable" VALUE="Variables.lockmeTableCounters.LockCounter"/>
        <SETVAR NAME="lockAsset" VALUE="Variables.lockmeAssetCounters.LockCounter"/>
        <!-- do the unlock -->
        <LOCK TABLE="Variables.lockTable"
              ASSET="Variables.lockAsset"/>
        <!-- See if lock succeeded -->
        <IF COND="Variables.errno=0">
             <THEN>
                  <!-- if succeeded, brag about it -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/locksucceededfor" VARNAME="locksuccess"/> 
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.locksuccess"/>
						<ARGUMENT NAME="severity" VALUE="info"/>
				  </CALLELEMENT>
			 </THEN>
             <ELSE>
                  <!-- otherwise, call an error reporting element -->
                  <XLAT.LOOKUP KEY="dvin/AdminForms/Lockfailed" VARNAME="lockfailed"/> 
				  <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
						<ARGUMENT NAME="msgtext" VALUE="Variables.lockfailed"/>
						<ARGUMENT NAME="severity" VALUE="error"/>
				  </CALLELEMENT>
				  <CALLELEMENT NAME="FutureTense/Apps/AdminForms/RevisionMgt/errors"/>
             </ELSE>
        </IF>
    </THEN></IF>
    <INCCOUNTER NAME="LockCounter" VALUE="1"/>
</LOOP>
</div>
</FTCS>
