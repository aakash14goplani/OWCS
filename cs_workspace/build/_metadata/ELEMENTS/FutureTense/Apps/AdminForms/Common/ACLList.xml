<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">

<IF COND="IsVariable.selectList=false">
    <THEN>
        <SETVAR NAME="selectList" VALUE="Variables.empty"/>
    </THEN>
</IF>
<acl.list list="ACLs" ORDER="aclname"/>
<IF COND="IsList.ACLs=true">
    <THEN>
        <IF COND="Variables.single=yes">
            <THEN>
                <![CDATA[
        	        <SELECT NAME="ACLList">
                ]]>
            </THEN>
            <ELSE>
                <![CDATA[
        	        <SELECT NAME="ACLList" SIZE="10" MULTIPLE>
                ]]>
            </ELSE>
        </IF>
        <LOOP LIST="ACLs">
            <SETVAR NAME="errno" VALUE="0"/>
            <ISINLIST STR="Variables.selectList" ITEM="ACLs.aclname"/>
            <IF COND="Variables.errno=1">
                <THEN>
                    <SETVAR NAME="selected" VALUE="SELECTED"/>
                </THEN>
                <ELSE>
                    <SETVAR NAME="selected" VALUE="NOT"/>
                </ELSE>
            </IF>
				<STRING.ENCODE LIST="ACLs" COLUMN="aclname" VARNAME="encaclname"/>
    	        <REPLACEALL LIST="Variables.encaclname,Variables.selected">
    	            <![CDATA[
           		        <OPTION VALUE="Variables.encaclname" Variables.selected>Variables.encaclname
       		        ]]>
    	        </REPLACEALL>
        </LOOP>
    </THEN>
</IF>
<![CDATA[
            </SELECT>
]]>

</FTCS>
