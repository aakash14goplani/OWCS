<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">
<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/BasicEnvironment"/>
<!-- Make sure required parameters exist -->
<IF COND="IsVariable.tool=false">
    <THEN>
        <SETVAR NAME="tool" VALUE="Login"/>
    </THEN>
</IF>
<IF COND="IsVariable.form=false">
    <THEN>
        <SETVAR NAME="form" VALUE="main"/>
    </THEN>
</IF>

<SETSSVAR NAME="csblobid" VALUE="CS.UniqueID"/>

<HTML>
    <HEAD>
        <TITLE>FutureTense IPS: Content Server Site Management Tools</TITLE>

        <SATELLITE.LINK ASSEMBLER="query" PAGENAME="FutureTense/Apps/AdminForms/AdminMenu" OUTSTRING="urlAdminMenu"/>
        <SATELLITE.LINK ASSEMBLER="query" PAGENAME="FutureTense/Apps/AdminForms/AdminTitle" OUTSTRING="urlAdminTitle"/>
        <SATELLITE.LINK ASSEMBLER="query" PAGENAME="FutureTense/Apps/AdminForms/AdminForm" OUTSTRING="urlAdminForm"/>
        <REPLACE STR="Variables.urlAdminMenu,Variables.urlAdminTitle,Variables.urlAdminForm">
	        <![CDATA[
        	    <SCRIPT LANGUAGE="JavaScript">
    	        	var tool="Login";
	            	function switchTool(newtool,newform)
            		{
            			tool=newtool;

            			MenuFrame.location.href="Variables.urlAdminMenu&tool="+tool;
            			TitleFrame.location.href="Variables.urlAdminTitle&tool="+tool;
            			ToolFrame.location.href="Variables.urlAdminForm&tool="+tool+"&form="+newform;
        	    	}
    	        </SCRIPT>
	        ]]>
        </REPLACE>
    </HEAD>
    <FRAMESET COLS="145,*" FRAMEBORDER="0" FRAMESPACING="0">
        <REPLACEALL LIST="Variables.urlAdminMenu,Variables.urlAdminTitle,Variables.urlAdminForm,Variables.tool,Variables.form">
            <![CDATA[
                <FRAME SRC="Variables.urlAdminMenu&tool=Variables.tool" SCROLLING="NO" NAME="MenuFrame" MARGINWIDTH="0" MARGINHEIGHT="0" NORESIZE="TRUE">
                <FRAMESET ROWS="91,*" FRAMEBORDER="0" FRAMESPACING="0">
                    <FRAME SRC="Variables.urlAdminTitle&tool=Variables.tool" NAME="TitleFrame" MARGINWIDTH="0" MARGINHEIGHT="0" NORESIZE="TRUE" SCROLLING="NO">
                    <FRAME SRC="Variables.urlAdminForm&tool=Variables.tool&form=Variables.form" NAME="ToolFrame" MARGINWIDTH="0" MARGINHEIGHT="0">
                </FRAMESET>
            ]]>
         </REPLACEALL>
    </FRAMESET>
</HTML>
</FTCS>
