    	<CALLELEMENT NAME="OpenMarket/Xcelerate/Actions/AssetMgt/UpdateRelations">
			<ARGUMENT NAME="assetname" VALUE="theCurrentAsset"/>
			<ARGUMENT NAME="prefix" VALUE="Variables.prefix"/>
    	</CALLELEMENT>

	</then>
</if>

