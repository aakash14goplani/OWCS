<!-- Using predefined storage and naming
     conventions, filter something -->
<PROPERTY.GET PARAM="xcelerate.xmlfilters" INIFILE="futuretense_xcel.ini" VARNAME="xml_filter_file"/>
<setvar NAME="xml_filter_file" VALUE="Variables.xml_filter_file/Variables.AssetType/Variables.field.xml"/>
<setvar NAME="errno" VALUE="0"/>
<setvar NAME="XML_Variables.AssetType_Variables.field_error" VALUE="0"/>
<xmlfilter STR="Variables.field_content" VERIFY="false" FILTERFILE="Variables.xml_filter_file" RUN="Variables.run"/>
<if COND="Variables.run=false">
    <then>
        <if COND="Variables.errno=0">
            <then>
                <setvar NAME="XML_Variables.AssetType_Variables.field" VALUE="Variables.XMLFilteredString"/>
            </then>
        </if>
    </then>
</if>
<if COND="Variables.errno!=0">
    <then>
        <setvar NAME="XML_Variables.AssetType_Variables.field_error" VALUE="Variables.errno"/>
        <setvar NAME="XML_Variables.AssetType_Variables.field_errorstring" VALUE="Variables.XMLError"/>
    </then>
</if>

</FTCS>