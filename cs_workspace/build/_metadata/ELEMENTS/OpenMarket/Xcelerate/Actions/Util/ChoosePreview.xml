<!-- check to see if an override has been supplied -->
<PROPERTY.GET PARAM="xcelelem.choosepreview" INIFILE="futuretense_xcel.ini" VARNAME="propchoosepreview"/>
<if COND="Variables.propchoosepreview!=Variables.empty">
<then>
    <!-- use customized element -->
    <callelement NAME="Variables.propchoosepreview"/>
</then>
<else>
    <!-- use system default method -->
    <callsql LIST="Preview" QRYNAME="OpenMarket/Xcelerate/GetPreviewPages"/>

    <Select name="PreviewFunctions" onChange="gotoPreview(this.form, PreviewFunctions)">
 	<IF COND="Preview.#numRows!=0">
	<THEN>
		<loop LIST="Preview">
	        <OPTION VALUE="OpenMarket/Xcelerate/Preview&#38;c=Collection&#38;cid=Preview.id" REPLACEALL="Preview.id"/><STRING.STREAM VALUE="Preview.name"/>
        </loop>
	</THEN>
	<ELSE>
		<OPTION VALUE="None"/><XLAT.STREAM KEY="dvin/Common/None"/>
	</ELSE>
	</IF>
    </Select>
</else>
</if>

</FTCS>

