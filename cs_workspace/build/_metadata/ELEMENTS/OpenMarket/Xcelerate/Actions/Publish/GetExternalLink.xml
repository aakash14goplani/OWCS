<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Xcelerate/Actions/Publish/GetExternalLink
-
- INPUT
-
- OUTPUT
-
-->

<REMOVEVAR NAME="_referURL_"/>

<ASSET.LOAD NAME="_asset_" TYPE="Link" OBJECTID="Variables._cid_" DEPTYPE="exists"/>

<if COND="IsError.Variables.errno!=true">
<then>
    <ASSET.GET NAME="_asset_" FIELD="status" OUTPUT="_status_" />
    <if COND="Variables._status_!=VO">
    <then>
        <ASSET.GET NAME="_asset_" FIELD="href" OUTPUT="_referURL_"/>
	<if COND="IsVariable._frag_=true">
	<then>
		<setvar NAME="_referURL_" VALUE="Variables._referURL_#Variables._frag_"/>
	</then>
	</if>
    </then>
    <else>        
        <setvar NAME="_referURL_" VALUE="_NOLINK_" />
    </else>
    </if>
</then>
<else>
	<setvar NAME="_referURL_" VALUE="_NOLINK_" />
</else>
</if>

</FTCS> 
