<PROPERTY.GET PARAM="xcelerate.treeType" INIFILE="futuretense_xcel.ini" VARNAME="proptreetype"/>

	<if  COND="IsElement.OpenMarket/Xcelerate/UIFramework/ShowSiteTreeVariables.proptreetype=true">
		<then>
			<callelement NAME="OpenMarket/Xcelerate/UIFramework/ShowSiteTreeVariables.proptreetype">
			</callelement>		
		</then>
		<else>
			<PROPERTY.GET PARAM="xcelerate.showSiteTree" INIFILE="futuretense_xcel.ini" VARNAME="propshowsitetree"/>
			<if COND="Variables.propshowsitetree=true">
				<then>
					<callelement NAME="OpenMarket/Xcelerate/Actions/Util/ShowError">
						<argument NAME="error" VALUE="UnrecognizedTree"/>
					</callelement>
				</then>
			</if>				
		</else>		
	</if>   
</FTCS>

