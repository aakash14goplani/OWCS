<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Gator/FlexibleAssets/Common/IntDecConversion
--
-- INPUT
--     1. OPtype
       2. currentval  
-- OUTPUT
--
-->
 	 <if COND="Variables.OPtype=IntToDec">
	 <then>
	     
       <setvar NAME="newDecConfidence"  VALUE="1"/>
 			 <!--setvar NAME="currentval" VALUE="100"/--> 
			 <TEXTFORMAT.LENGTH VALUE="Variables.currentval" VARNAME="length"/> 
			 <IF COND="Variables.length=3"> 
			 <THEN> 
						<setvar NAME="newDecConfidence" VALUE="1.0"/> 
				</THEN> 
				<ELSE> 
						<IF COND="Variables.length=1"> 
						<THEN> 
								 <setvar NAME="newDecConfidence" VALUE=".0Variables.currentval"/> 
						</THEN> 
						<ELSE> 
								<setvar NAME="newDecConfidence" VALUE=".Variables.currentval"/> 
						</ELSE> 
						</IF> 
				</ELSE> 
				</IF> 
		</then>
		</if>
 		
 	  <if COND="Variables.OPtype=DecToInt">
	  <then>	 
		    <setvar NAME="NewConfidence"  VALUE="100"/> 
				<CALCULATOR.GO VALUE="Variables.currentval 100 *" VARNAME="newIntConfidence"/> 
  				<setvar NAME="errno"  VALUE="0"/>
				 <INDEXOF STR="Variables.newIntConfidence" WHAT="."
									OUTSTR="index"
				 />
 				 <IF COND="Variables.errno=1">
				 <THEN>
				     <SUBSTRING STR="Variables.newIntConfidence" 
								OUTSTR="NewConfidence"
								INDEX="0" 
								ENDINDEX="Variables.index"/>
								

 				 </THEN>
				 </IF>
  		</then>
		</if>

</FTCS> 
