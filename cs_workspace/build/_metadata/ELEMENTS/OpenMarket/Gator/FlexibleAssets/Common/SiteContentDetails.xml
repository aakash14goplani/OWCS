<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Gator/FlexibleAssets/Common/SiteContentDetails
-- 
-- displays the publictaions for the asset, displaying only those publications that 
-- the user is authorized in
-- INPUT
--		Variables.assetname - loaded asset 
-- OUTPUT
--
-->
 
<!--  Get the list of the previously published sites for edit -->
<ASSET.SITES NAME="Variables.assetname" LIST="PubSiteList"/>

<USERMANAGER.GETLOGINUSER VARNAME="username"/>
<callelement NAME="OpenMarket/Xcelerate/Util/LoadProperty">
	<argument NAME="property" VALUE="xcelelem.manageuserpub"/>
	<argument NAME="ini" VALUE="futuretense_xcel.ini"/>
	<argument NAME="varname" VALUE="propmanageuserpub"/>
</callelement>
<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Site"/>: </td>
		<td></td>
				
 <td class="form-inset">
 <setvar NAME="needComma" VALUE="false"/>
 <loop LIST="PubSiteList">
	<callelement NAME="Variables.propmanageuserpub">
	    <argument NAME="upcommand" VALUE="IsUserAuthorized"/>
	    <argument NAME="username" VALUE="Variables.username"/>
	    <argument NAME="pubid" VALUE="PubSiteList.id"/>
	</callelement>
	<if COND="Variables.IsAuthorized=true">
	<then>
		<if COND="Variables.needComma=true">
		<then>, 
		</then>
		</if>
	 	<STRING.STREAM VALUE="PubSiteList.description"/>
	 	<setvar NAME="needComma" VALUE="true"/>
	</then>
	</if>
 </loop>	
</td> 
</tr> 				
  
		 			

  </FTCS> 
