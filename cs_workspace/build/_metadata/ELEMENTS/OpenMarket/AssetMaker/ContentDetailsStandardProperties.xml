<SCRIPT LANGUAGE="JavaScript">
<!-- This function is used in GenerateLink element for opening new Tab in Contributor UI.  -->
function openNewTab(id, type, name)
{
	var data = {
		functionid: 'inspect',
		asset: {
			'name': name,
			'type': type,
			'id': id
		}
	};
	window.parent.dojo.publish('/fw/ui/app/oncontext', [data]);
}	   
</SCRIPT>
<!-- The beginning of Group 1 -->
<!-- if there is no description field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/description/storage/type!=true">
<THEN>
<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/AT/Common/Description"/>:</td>
		<td></td>
		<td class="form-inset">
			<STRING.LENGTH VALUE="ContentDetails:description" VARNAME="valueLength"/> 
			<IF COND="Variables.valueLength=0">
			<THEN>
				<span class="disabledText"><XLAT.STREAM KEY="UI/Forms/NotAvailable"/></span>
			</THEN>
			<ELSE>
				<STRING.STREAM VARIABLE="ContentDetails:description"/>
			</ELSE>
			</IF>
		</td>
	</tr>
	
</THEN>
</IF>

<!-- if there is no id field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/id/storage/type!=true">
<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/AT/Common/ID"/>:</td>
		<td></td>
		<td class="form-inset"><STRING.STREAM VARIABLE="ContentDetails:id"/></td>
	</tr>
	
</THEN>
</IF>

<!-- if this is not renderable with templates, then neither template nor subtype are displayed -->
<IF COND="Variables.RenderUsingTemplate=true">
<THEN>
	<!-- if there is no subtype field in the asset descriptor file, put it out here -->
	<IF COND="IsVariable.assetmaker/property/subtype/storage/type!=true">
	<THEN>
		<ASSET.GetLegalSubtypes TYPE="Variables.AssetType" LIST="subtypes" PUBID="SessionVariables.pubid"/>
		<if COND="subtypes.subtype!=Variables.empty">
		<then>
			<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
			<tr>
				<td class="form-label-text"><XLAT.STREAM KEY="dvin/UI/Subtype"/>:</td>
				<td></td>
				<td class="form-inset">
					<if COND="Variables.ContentDetails:subtype=Variables.empty">
					<then>
						<XLAT.STREAM KEY="dvin/UI/Util/Standardnosubtype"/> 
					</then>
					<else>
						<STRING.STREAM VARIABLE="ContentDetails:subtype"/>
					</else>
					</if>
				</td>
			</tr>
			
		</then>
		</if>
	</THEN>
	</IF>
</THEN>
</IF>

<!-- if there is no status field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/status/storage/type!=true">
<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<callelement NAME="OpenMarket/Xcelerate/Actions/Util/ShowStatusCode"/>
	</tr>	
</THEN>
</IF>

<!-- Show the start and end date attributes -->
<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/form/InspectAssetStartEndDate"/>

<!-- Call element ShowDimensionDetails only when usedimension is not False(F), i.e. usedimension = T or NULL since default for usedimension is true. -->
<ASSETTYPE.LIST LIST="AMAssetType" FIELD1="assettype" VALUE1="Variables.AssetType" />
<IF COND="IsError.Variables.errno=false">
<THEN>
      <LOOP LIST="AMAssetType">	  
	  <IF COND="AMAssetType.usedimension!=F" >	  
		<THEN>
			<callelement NAME="OpenMarket/Xcelerate/AssetType/Dimension/ShowDimensionDetails"/>
	    </THEN>
	  </IF>
	  </LOOP>
</THEN>
</IF>

<!-- The beginning of Group 2 -->


<!-- if there is no category field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/category/storage/type!=true">
<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/UI/Admin/Category"/>:</td>
			<setvar NAME="category" VALUE="Variables.ContentDetails:category"/>
			<IF COND="Variables.category != Variables.empty">
			<THEN>
				<setvar NAME="assettype" VALUE="Variables.AssetType"/>
				<selectto LIST="CategoryDescription" FROM="Category" WHAT="description" WHERE="category,assettype"/>
			</THEN>
			</IF>
			
		<td></td>
		<td class="form-inset">			
		<if COND="IsList.CategoryDescription=true">
		<then>
			<IF COND="CategoryDescription.#numRows!=0">
			<THEN>
				<STRING.STREAM LIST="CategoryDescription" COLUMN="description"/>
			</THEN>
			<ELSE>
				<span class="disabledText"><XLAT.STREAM KEY="UI/Forms/NotAvailable"/></span>
			</ELSE>
			</IF>
		</then>
		<else>
				<span class="disabledText"><XLAT.STREAM KEY="UI/Forms/NotAvailable"/></span>
		</else>
		</if>	
		</td>
	</tr>
</THEN>
</IF>


<!-- [2008-01-23 KGF] adding filename/path to form for AM assets in Adv. UI. -->
<!-- if there is no filename field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/filename/storage/type!=true">
<THEN>
	<IF COND="IsVariable.ContentDetails:filename!=true">
	<THEN>
		<SETVAR NAME="ContentDetails:filename" VALUE=""/>
	</THEN>
	</IF>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Filename"/>:</td>
		<td></td>
		<td class="form-inset">
			<IF COND="Variables.ContentDetails:filename=Variables.empty">
			<THEN>
				<span class="disabledText"><XLAT.STREAM KEY="UI/Forms/NotAvailable"/></span>
			</THEN>
			<ELSE>
				<STRING.STREAM VARIABLE="ContentDetails:filename"/>
			</ELSE>
			</IF>
		</td>
	</tr>

</THEN>
</IF>
<!-- if there is no path field in the asset descriptor file, put it out here -->
<IF COND="IsVariable.assetmaker/property/path/storage/type!=true">
<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td class="form-label-text"><XLAT.STREAM KEY="dvin/Common/Path"/>:</td>
		<td></td>
		<td class="form-inset">
			<IF COND="Variables.ContentDetails:path=Variables.empty">
			<THEN>
				<span class="disabledText"><XLAT.STREAM KEY="UI/Forms/NotAvailable"/></span>
			</THEN>
			<ELSE>
				<STRING.STREAM VARIABLE="ContentDetails:path"/>
			</ELSE>
			</IF>
		</td>
	</tr>
</THEN>
</IF>

</FTCS> 
