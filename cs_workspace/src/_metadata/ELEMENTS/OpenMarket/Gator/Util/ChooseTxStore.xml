<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Gator/Util/ChooseTxStore
--
-- INPUT
--
-- OUTPUT
--
-->
 					 <callelement NAME="OpenMarket/Gator/Util/GetStoreId"/>
					 
 						  <!-- test under different circumstances where storeid=1, storeid=2, etc..  -->
                     <if COND="IsVariable.txnumStores=true">
					<then>
                        <if COND="Variables.txnumStores!=Variables.empty">
                            <then>
                            <if COND="Variables.txnumStores!=1">
							<then>
									<setcounter NAME="indexcounter"  VALUE="0"/>
  								<tr height="10">
										<td colspan="4" height="10"><img src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" width="1" height="10" REPLACEALL="Variables.cs_imagedir"/></td>
									</tr>
 									 <tr height="1">
										<td colspan="4" bgcolor="#cccccc" height="1"><img src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" width="1" height="1" REPLACEALL="Variables.cs_imagedir"/></td>
									</tr>
 									<tr height="10">
										<td colspan="4" height="10"><img src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" width="1" height="10" REPLACEALL="Variables.cs_imagedir"/></td>
									</tr>
  							 	  <tr>
											<td></td>
											<td valign="middle" colspan="4"><XLAT.STREAM KEY="dvin/Util/StoreID"/> &nbsp; 
											  <setcounter NAME="icounter"  VALUE="0"/>
												<SELECT NAME="TXStoreId" dojoType="fw.dijit.UISimpleSelect" showErrors="false" clearButton="true" >
													<loop COUNT="Variables.txnumStores">
													   <ICS.RESOLVEVARIABLES  NAME="Variables.Counters.icounterCurrentStoreId" OUTPUT="tempstoreid" DELIMITED="true"/>
 														<SETVAR NAME="storeid" VALUE="Variables.tempstoreid"/>
 														<if COND="Variables.TXStoreId=Variables.storeid">
														<then>
															<option value="Variables.storeid" REPLACEALL="Variables.storeid" SELECTED=""><STRING.STREAM VALUE="Variables.storeid"/></option>
														</then>
														<else>
															<option value="Variables.storeid" REPLACEALL="Variables.storeid"><STRING.STREAM VALUE="Variables.storeid"/></option>
														</else>
														</if>
														<inccounter  NAME="icounter"  VALUE="1"/>
													</loop>
												 </SELECT>
  										</td>
									 </tr>
									 <!--
 									<tr height="10">
										<td colspan="4" height="10"><img src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" width="1" height="10" REPLACEALL="Variables.cs_imagedir"/></td>
									</tr>
									-->
  							</then>
							</if>
                        </then>
                        </if>
                  </then>
				  </if>

</FTCS> 
