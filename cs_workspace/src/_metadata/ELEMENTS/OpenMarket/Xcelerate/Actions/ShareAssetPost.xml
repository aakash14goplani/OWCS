<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Xcelerate/Actions/ShareAssetPost
--
-- INPUT
--
-- OUTPUT
--
-->
<STRING.ENCODE VARIABLE="id" VARNAME="id"/>
<STRING.ENCODE VARIABLE="AssetType" VARNAME="AssetType" />
<if COND="IsError.Variables.errno=false">
	<then>
		<ASSET.SITES NAME="theCurrentAsset" LIST="currentPubs"/>
		<XLAT.LOOKUP KEY="dvin/UI/SitesinwhichAssetTypeisaccessibleare" VARNAME="_XLAT_" ENCODE="false"/>
		<SETVAR NAME="msgtext" VALUE="Variables._XLAT_ &#60;UL&#62;"/>
		<LOOP LIST="currentPubs">
			<SETVAR NAME="msgtext" VALUE="Variables.msgtext &#60;LI&#62;currentPubs.name"/>
		</LOOP>
		<SETVAR NAME="msgtext" VALUE="Variables.msgtext &#60;/UL&#62;"/>

		<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
	    	<argument NAME="msgtext" VALUE="Variables.msgtext"/>
			<argument NAME="severity" VALUE="info"/>	
	    </callelement>

	</then>
	<else>
	   <callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/ShowMessage">
	   	<argument NAME="elem" VALUE="EnterFailed"/>
	   	<argument NAME="severity" VALUE="error"/>
		 </callelement>
	</else>
</if>
		 
 
<if COND="Variables.cs_environment!=ucform">
<then>
	<callelement NAME="OpenMarket/Xcelerate/Actions/ContentDetailsFront">
		<argument NAME="AssetType" VALUE="Variables.AssetType"/>
		<argument NAME="id"        VALUE="Variables.id"/>
	</callelement>
</then>
</if>

</FTCS> 
