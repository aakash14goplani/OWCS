<!-- to check if the string is belong to the 'Integer'!-->
function IsInt(str) {
/* strip leading zeroes to prevent false negative! */

    while (str.charAt(0) == '0' && str.length > 1) str = str.substr(1);
    var i = parseInt(str);
    if (isNaN(i))
        return false;
    i = i.toString();
    if (i != str)
        return false;
    return true;
}
