					}

					if(IsInt(obj.form.elements['ShippingAmount'].value))
					{
						var percentnumber=obj.form.elements['ShippingAmount'].value;
						percentnumber=parseInt(percentnumber,10);
						obj.form.elements['ShippingAmount'].value=percentnumber;
