<!-- If there is not a description field in the descriptor file, present the description field -->
<IF COND="IsVariable.assetmaker/property/description/storage/type!=true">
<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<tr>
		<td CLASS="form-label-text"><XLAT.STREAM KEY="dvin/AT/Common/Description"/>:</td>
		<td></td>
		<td class="form-inset">
			<callelement NAME="OpenMarket/Gator/AttributeTypes/TextBox">
				<argument NAME="inputName" VALUE="Variables.AssetType:description"/>
				<argument NAME="inputValue" VALUE="Variables.ContentDetails:description"/>
				<argument NAME="inputSize" VALUE="32"/>
				<argument NAME="inputMaxlength" VALUE="128"/>
				<argument name="applyDefaultFormStyle" value='Variables.defaultFormStyle' />
			</callelement>
		</td>
	</tr>
	<IF COND="Variables.formfieldlist=Variables.empty">
	<THEN>
		<SETVAR NAME="formfieldlist" VALUE="description"/>
	</THEN>
	<ELSE>
		<SETVAR NAME="formfieldlist" VALUE="Variables.formfieldlist,description"/>
	</ELSE>
	</IF>
	
</THEN>
</IF>

<!-- If there is not id field in the descriptor file, present the id field -->
<IF COND="IsVariable.assetmaker/property/id/storage/type!=true">
<THEN>
	<IF COND="Variables.updatetype!=setformdefaults">
	<THEN>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
		<tr>
			<td CLASS="form-label-text"><XLAT.STREAM KEY="dvin/AT/Common/ID"/>:</td>
			<td></td>
			<td class="form-inset"><STRING.STREAM VARIABLE="id"/></td>
		</tr>
	</THEN>
	</IF>
</THEN>
</IF>

<!-- if this is not renderable with templates, then neither template nor subtype are displayed -->
<IF COND="Variables.assetmaker/assettags/renderusingtemplate=YES">
<THEN>
	<!-- If there is not subtype field in the descriptor file, present the subtype field -->
	<IF COND="IsVariable.assetmaker/property/subtype/storage/type!=true">
	<THEN>
		<ASSET.GetLegalSubtypes TYPE="Variables.AssetType" LIST="subtypes" PUBID="SessionVariables.pubid"/>
		<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
		<tr>
			<td class="form-label-text"><XLAT.STREAM KEY="dvin/UI/Subtype"/>:</td>
			<td></td>
			<td class="form-inset">
				<callelement NAME="OpenMarket/Xcelerate/Actions/Util/MakeSubtypeList">
					<argument NAME="Prefix" VALUE="Variables.AssetType"/>
					<argument NAME="fieldvalue" VALUE="Variables.ContentDetails:subtype"/>
					<argument NAME="AssetType" VALUE="Variables.AssetType"/>
				</callelement></td>
		</tr>	
		<SETVAR NAME="formfieldlist" VALUE="Variables.formfieldlist,subtype"/>
	</THEN>
	</IF>
</THEN>
</IF>

<!-- Show the start and end date attributes -->
<!--Call start date and end date for site preview-->
<callelement NAME="OpenMarket/Xcelerate/UIFramework/form/AssetTypeStartEndDate">
	<argument NAME="startDateFieldName" VALUE="Variables.AssetType:startdate"/>
	<argument NAME="endDateFieldName"  VALUE="Variables.AssetType:enddate"/>
</callelement>
<!--End site preview dates -->

		
<!-- If there is not subtype field in the descriptor file, present the subtype field -->
<IF COND="IsVariable.assetmaker/property/category/storage/type!=true">
<THEN>
	<if COND="Category.#numRows!=0">
	<then>
	   <callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	   <tr>
	        <td CLASS="form-label-text"><XLAT.STREAM KEY="dvin/UI/Admin/Category"/>:</td>
			<td></td>
	        <td class="form-inset">
	            <callelement NAME="OpenMarket/Xcelerate/Actions/Util/MakeCategoryList">
					<ARGUMENT NAME="Prefix" VALUE="Variables.AssetType"/>
				</callelement>
	        </td>
	    </tr>
		<SETVAR NAME="formfieldlist" VALUE="Variables.formfieldlist,category"/>
	</then>
	</if>
</THEN>
</IF>

