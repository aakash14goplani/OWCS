<SCRIPT LANGUAGE="JavaScript">
	function checkInput(form)
	{

		 
		if ( form.SSProtocol.value=="")
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSSProtocol" ESCAPE="true" ENCODE="false"/>');
			return false;
		}

		if( form.SSHost.value=="")
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSSHost" ESCAPE="true" ENCODE="false"/>');
			return false;
		}
		
		if( form.SSPort.value=="")
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSSPort" ESCAPE="true" ENCODE="false"/>');
			return false;
		}

		if( form.cgipath.value=="")
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSScgipath" ESCAPE="true" ENCODE="false"/>');
			return false;
		}


		if( form.SSUsername.value=="")
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSSUsername" ESCAPE="true" ENCODE="false"/>');
			return false;
		}

		if( form.SSPassword.value=="" || pwd.length &lt; 8 )
		{
			alert('<XLAT.STREAM KEY="dvin/UI/CSAdminForms/MustEnterSSPassword" ESCAPE="true" ENCODE="false"/>');
			return false;
		}

		return true;
	}

	
</SCRIPT>

