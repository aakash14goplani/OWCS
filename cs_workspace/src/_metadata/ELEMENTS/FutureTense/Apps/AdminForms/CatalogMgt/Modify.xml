<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">

<!-- ####################################################################### -->
<!-- CatalogMgt/Modify                                                       -->
<!-- FutureTense, Inc.                                                       -->
<!-- ####################################################################### -->

<SATELLITE.FORM ASSEMBLER="query" ACTION="CatalogManager" METHOD="POST">
    <STRING.ENCODE VARIABLE="charset" VARNAME="OutputQString"/>
    <INPUT TYPE="HIDDEN" NAME="_charset_" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>
	<STRING.ENCODE VARIABLE="cs_environment" VARNAME="OutputQString"/>
    <INPUT TYPE="hidden"  NAME="cs_environment" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>
	<STRING.ENCODE VARIABLE="cs_formmode" VARNAME="OutputQString"/>
    <INPUT TYPE="hidden"  NAME="cs_formmode" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>

<SETVAR NAME="tblname" VALUE="Variables.key"/>
<SELECTTO FROM="SystemInfo" WHAT="*" WHERE="tblname" LIST="ResultsList"/>

<table class="width-outer-70" cellspacing="0" cellpadding="0" border="0">
	<tr><td>
		<span class="title-text"><XLAT.STREAM KEY="dvin/AdminForms/ModifyCatalog"/></span>
	</td></tr>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/TitleBar"/>
</table>

<TABLE class="width-outer-50" BGCOLOR="#FFFFFF" BORDER="0" CELLPADDING="2" CELLSPACING="1">
    <CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
    <TR>
        <TD class="form-label-text" align="right" NOWRAP="true">
   			<XLAT.STREAM KEY="dvin/AdminForms/CatalogName"/>:
        </TD>
        <TD class="form-inset" align="left">
			<REPLACEALL LIST="ResultsList.tblname,ResultsList.systable">
				ResultsList.tblname
				<INPUT TYPE="hidden" NAME="tblname" VALUE="ResultsList.tblname"/>
				<INPUT TYPE="hidden" NAME="systable" VALUE="ResultsList.systable"/>
			</REPLACEALL>
        </TD>
    </TR>
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
    <TR>
        <TD class="form-label-text" align="right" NOWRAP="true">
			<XLAT.STREAM KEY="dvin/AdminForms/FileStorageDirectory"/>
        </TD>
        <TD class="form-inset" align="left">
            <FONT FACE="Arial, Helvetica">
                <REPLACE STR="ResultsList.defdir">
        			<INPUT TYPE="text" NAME="defdir" SIZE="32" VALUE="ResultsList.defdir"/>
        		</REPLACE>
            </FONT>
        </TD>
    </TR>
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
    <TR>
        <TD class="form-label-text" align="right" valign="TOP" NOWRAP="true">
            <FONT FACE="Arial, Helvetica" SIZE="-1">
    			<XLAT.STREAM KEY="dvin/AdminForms/ACL"/>:
            </FONT>
        </TD>
        <TD class="form-inset" align="left">
  			<INPUT TYPE="HIDDEN" NAME="acl" VALUE=""/>
			<CALLELEMENT NAME="FutureTense/Apps/AdminForms/Common/ACLList">
				<ARGUMENT NAME="selectList" VALUE="ResultsList.acl"/>
			</CALLELEMENT>
        </TD>
    </TR>
    <callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/FooterBar"/>
	<TR>
        <TD></TD><TD>
   			<INPUT TYPE="hidden" NAME="tablename" VALUE="SystemInfo"/>
   			<INPUT TYPE="hidden" NAME="ftcmd" VALUE="replacerow"/>
			<XLAT.LOOKUP KEY="dvin/AdminForms/Modify" VARNAME="_XLAT_"/>
			<A onClick='checkModifyInput(document.forms[0]); document.forms[0].submit();' HREF="#" onmouseover="window.status='Variables._XLAT_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables._XLAT_"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="dvin/AdminForms/Modify"/></CALLELEMENT></A>
        </TD>
    </TR>
</TABLE>
</SATELLITE.FORM>
</FTCS>
