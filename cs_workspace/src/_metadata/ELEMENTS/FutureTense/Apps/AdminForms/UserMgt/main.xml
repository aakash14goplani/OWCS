<?XML VERSION="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.0">

<!-- ####################################################################### -->
<!-- UserMgt/main                                                            -->
<!-- FutureTense, Inc.                                                       -->
<!-- ####################################################################### -->

<IF COND="IsSessionVariable.userkey=false">
     <THEN>
          <SETSSVAR NAME="userkey" VALUE="Variables.empty"/>
     </THEN>
</IF>

<table class="width-outer-70" cellspacing="0" cellpadding="0" border="0">
	<tr><td>
		<span class="title-text"><XLAT.STREAM KEY="UI/Forms/User"/></span>
	</td></tr>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/TitleBar"/>
</table>

<SATELLITE.FORM ASSEMBLER="query" METHOD="POST">
	<STRING.ENCODE VARIABLE="charset" VARNAME="OutputQString"/>
	<INPUT TYPE="HIDDEN" NAME="_charset_" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>
	<STRING.ENCODE VARIABLE="cs_environment" VARNAME="OutputQString"/>
	<INPUT TYPE="hidden"  NAME="cs_environment" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>
	<STRING.ENCODE VARIABLE="cs_formmode" VARNAME="OutputQString"/>
	<INPUT TYPE="hidden"  NAME="cs_formmode" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>   

<TABLE class="width-outer-30" BORDER="0"  CELLPADDING="0" CELLSPACING="0">
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<TR>
		<TD class="form-label-text" VALIGN="BASELINE">
				<XLAT.STREAM KEY="dvin/AdminForms/EnterUserName"/>
		</TD>
		<TD class="form-inset">
            <IF COND="IsSessionVariable.userkey=false">
                 <THEN>
        			<INPUT TYPE="text" SIZE="32" NAME="key" VALUE=""/>
                 </THEN>
                 <ELSE>
        		    <REPLACE STR="SessionVariables.userkey">
            			<INPUT TYPE="text" SIZE="32" NAME="key" VALUE="SessionVariables.userkey"/>
            		</REPLACE>
        		</ELSE>
            </IF>
		</TD>
	</TR>
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<TR>
		<TD class="form-label-text">
			<XLAT.STREAM KEY="dvin/AdminForms/SelectOperation"/>
		</TD>
		<TD class="form-inset">
			<table width="100%">
				<tr>
					<td class="form-inset" align="left">
						<INPUT TYPE="radio" style="margin-left:0px" NAME="form" VALUE="ModifyUserList" CHECKED="true"/>
					</td>
					<td align="left" valign="TOP" class="form-inset">
						<XLAT.STREAM KEY="dvin/AdminForms/ModifyUser"/>
					</td>
				</tr>
				<tr>
					<td class="form-inset" align="left" valign="TOP">
						<INPUT TYPE="radio" style="margin-left:0px" NAME="form" VALUE="ModifyUserAttList"/>
					</td>
					<td class="form-inset" align="left" valign="TOP">
						<XLAT.STREAM KEY="dvin/AdminForms/ModifyUserAttributes"/>
					</td>
				</tr>
				<tr>
					<td class="form-inset" align="left" valign="TOP">
						<INPUT TYPE="radio" style="margin-left:0px" NAME="form" VALUE="Create"/>
					</td>
					<td class="form-inset" align="left" valign="TOP">
						<XLAT.STREAM KEY="dvin/AdminForms/AddUser"/>
					</td>
				</tr>
				<tr>
					<td class="form-inset" align="left">
						<INPUT TYPE="radio" style="margin-left:0px" NAME="form" VALUE="DeleteUserList"/>
					</td>
					<td class="form-inset" align="left" valign="TOP">
						<XLAT.STREAM KEY="dvin/AdminForms/DeleteUser"/>
					</td>
				</tr>
			</table>
		</TD>
	</TR>
	<TR>
		<TD class="form-label-text"></TD><TD class="form-inset">
			<INPUT TYPE="hidden" NAME="pagename" VALUE="FutureTense/Apps/AdminForms/AdminForm"/>
			<INPUT TYPE="hidden" NAME="tool" VALUE="UserMgt"/>
			<XLAT.LOOKUP KEY="dvin/AT/Common/OK" VARNAME="_XLAT_"/>
			<A onClick='isKeyEntered(document.forms[0]);document.forms[0].submit();' HREF="#" onmouseover="window.status='Variables._XLAT_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables._XLAT_"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="dvin/AT/Common/OK"/></CALLELEMENT></A>
		</TD>
	</TR>
</TABLE>
</SATELLITE.FORM>
</FTCS>
