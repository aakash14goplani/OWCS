<SATELLITE.FORM ASSEMBLER="query" METHOD="get">
    <STRING.ENCODE VARIABLE="charset" VARNAME="OutputQString"/>
    <INPUT TYPE="HIDDEN" NAME="_charset_" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>

	<STRING.ENCODE VARIABLE="cs_environment" VARNAME="OutputQString"/>
    <INPUT TYPE="hidden"  NAME="cs_environment" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>

	<STRING.ENCODE VARIABLE="cs_formmode" VARNAME="OutputQString"/>
    <INPUT TYPE="hidden"  NAME="cs_formmode" VALUE="Variables.OutputQString" REPLACEALL="Variables.OutputQString"/>
    
<table class="width-outer-70" cellspacing="0" cellpadding="0" border="0">
	<tr><td>
		<span class="title-text"><XLAT.STREAM KEY="UI/Forms/ACLs"/></span>
	</td></tr>
	<callelement NAME="OpenMarket/Xcelerate/UIFramework/Util/TitleBar"/>
</table>    

<TABLE class="width-outer-30" BORDER="0" CELLPADDING="0" CELLSPACING="0">
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	<TR>
		<TD class="form-label-text" VALIGN="BASELINE">
			<XLAT.STREAM KEY="dvin/UI/CSAdminForms/SelectACLMsg"/>
		</TD>
		<TD class="form-inset">
            <CALLELEMENT NAME="FutureTense/Apps/AdminForms/Common/ACLList">
                <ARGUMENT NAME="single" VALUE="yes"/>
            </CALLELEMENT>
		</TD>
	</TR>
	<CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/RowSpacer"/>
	
	<TR>
		<TD class="form-label-text">
			<XLAT.STREAM KEY="dvin/UI/CSAdminForms/SelectOperationMsg"/>
		</TD>
		<TD class="form-inset">
			<table width="100%">
				<tr>
					<td class="form-inset" align="left">
						<INPUT style="margin-left:0px" TYPE="radio" NAME="form" VALUE="Modify" CHECKED="true"/>
					</td>
					<td align="left" valign="TOP" class="form-inset">
						<XLAT.STREAM KEY="dvin/UI/CSAdminForms/ModifyACL"/>
					</td>
				</tr>
				<tr>
					<td class="form-inset" align="left" valign="TOP">
						<INPUT style="margin-left:0px" TYPE="radio" NAME="form" VALUE="Add"/>
					</td>
					<td class="form-inset" align="left" valign="TOP">
						<XLAT.STREAM KEY="dvin/UI/CSAdminForms/AddACL"/>
					</td>
				</tr>
				<tr>
					<td class="form-inset" align="left" valign="TOP">
						<INPUT style="margin-left:0px" TYPE="radio" NAME="form" VALUE="Delete"/>
					</td>
					<td class="form-inset" align="left" valign="TOP">
						<XLAT.STREAM KEY="dvin/UI/CSAdminForms/DeleteACL"/>
					</td>
				</tr>
			</table>
		</TD>
	</TR>
	<TR>
		<TD class="form-label-text"></TD><TD class="form-inset">
			<INPUT TYPE="hidden" NAME="pagename" VALUE="FutureTense/Apps/AdminForms/AdminForm"/>
			<INPUT TYPE="hidden" NAME="tool" VALUE="ACLMgt"/>
			<INPUT TYPE="hidden" NAME="key" VALUE=""/>
			<XLAT.LOOKUP KEY="dvin/AT/Common/OK" VARNAME="_XLAT_"/>
			<A onClick="return submitForm();" HREF="#" onmouseover="window.status='Variables._XLAT_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables._XLAT_"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="dvin/AT/Common/OK"/></CALLELEMENT></A> 
		</TD>
	</TR>
</TABLE>
</SATELLITE.FORM>
</FTCS>
